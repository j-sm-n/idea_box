<h1>Add New Idea:</h1>
<%= form_for([current_user, @idea]) do |f| %>
  <%= f.text_field :title, placeholder: "Idea Title" %><br>
  <%= f.text_area :body_text, placeholder: "Tell us about your idea" %><br>
  <%= f.label "Choose category:" %>
  <%= f.collection_select(:category_id, @categories, :id, :name) %><br>
  <%= f.submit %>
<% end %>
<br>
<%= link_to "All Ideas", user_ideas_path %>
