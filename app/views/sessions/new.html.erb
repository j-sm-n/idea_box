<% if current_user.nil? %>
  <h1>Login</h1>
    <%= flash[:notice] %>
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username %> <br>

      <%= f.label :password %>
      <%= f.password_field :password %> <br>

      <%= f.submit "Login" %>
    <% end %>
<% else %>
  Welcome back, <%= current_user.username %>!
  Go to <%= link_to "Dashboard", user_path(current_user.id)%>
<% end %>
